{
  "compilerOptions": {
    "allowJs": true,
    "importHelpers": true,
    "target": "es6",
    "module": "esnext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "exclude": ["node_modules", "build"],
  "include": ["src"]
}
